<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardBackgroundColor="#007BFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#F6F6F6"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_nome_aluno"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="1"
                    android:text="Olá, Nome"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_academia_unifor"
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_weight="1"
                    android:text="Academia Unifor"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_log_out"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="330dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/icon_log_out" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_treino_do_dia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Treino do Dia"
            android:textColor="#007BFF"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_treino_do_dia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clipToPadding="false"
            android:paddingStart="15dp"
            android:paddingEnd="15dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_treinos_completos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_treinos_completos"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textColor="#020202"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:text="Treinos Completos"
                        android:textAlignment="center"
                        android:textColor="#6C757D"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="50dp"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/image_nivel_aluno"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/icon_nivel_aluno"
                        tools:srcCompat="@drawable/icon_nivel_aluno" />

                    <TextView
                        android:id="@+id/text_nivel_aluno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:text="Iniciante"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:fontFamily="sans-serif-black"
            android:text="Acesso Rápido"
            android:textColor="#007BFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:clickable="false"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_meus_treinos"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="false"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:clickable="false"
                        app:srcCompat="@drawable/icon_lista_treino"
                        tools:srcCompat="@drawable/icon_lista_treino" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="53dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:clickable="false"
                        android:text="Meus Treinos"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_ia"
                android:layout_width="160dp"
                android:layout_height="90dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="30dp"
                android:clickable="true"
                app:cardBackgroundColor="#E9F7FF"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="83dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icon_ia"
                        tools:srcCompat="@drawable/icon_ia" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="87dp"
                        android:layout_height="50dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:text="IA"
                        android:textColor="#6C757D"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Substitua o CardView do calendário na PrincipalActivity por este -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_calendario"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="30dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="#E9F7FF"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Mês e ano -->
                <TextView
                    android:id="@+id/text_mes_ano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:textColor="#007BFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Dias da semana -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="D"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="T"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Q"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Q"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="S"
                        android:textColor="#6C757D"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Dias do mês - Linha da semana atual -->
                <LinearLayout
                    android:id="@+id/layout_semana_atual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <!-- Os dias serão adicionados programaticamente -->
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="149dp"
            android:layout_height="54dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="50dp"
            android:fontFamily="sans-serif-black"
            android:text="Aulas Coletivas de Hoje"
            android:textColor="#007BFF"
            android:textSize="20dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_aulas_diarias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:clipToPadding="false"
            android:paddingEnd="60dp" />

    </LinearLayout>

</ScrollView>